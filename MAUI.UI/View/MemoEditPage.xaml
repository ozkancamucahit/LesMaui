<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.UI.View.MemoEditPage"
             Title="Add/Edit Memos"
             xmlns:viewmodel="clr-namespace:MAUI.UI.ViewModel"
             x:DataType="viewmodel:MemoDetailViewModel"
             xmlns:model="clr-namespace:UI.Library.Models;assembly=UI.Library"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps">

        
    <VerticalStackLayout>
        <Label 
            x:Name="lblLatitude"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            x:Name="lblLongitude"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <maps:Map x:Name="map" IsScrollEnabled="False" IsTrafficEnabled="False"/>

        <Button x:Name="btnTakePhoto"
                Text="Pick a photo"
                Command="{Binding PickPhotoCommand}"></Button>

    </VerticalStackLayout>






</ContentPage>